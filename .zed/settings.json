{
  "prettier": {
    "allowed": false
  },
  // "code_actions_on_format": {
  //   "source.fixAll.eslint": true,
  //   "source.organizeImports": false
  // },
  "lsp": {
    "eslint": {
      "initialization_options": {
        "run_formatter": true
      },
      "settings": {
        "codeActionOnSave": {
          "rules": [
            "*"
          ] // or specify rules you want; this allows fixAll on save
        }
      }
    },
  },
  "languages": {
    "Svelte": {
      // Set formatter to use code actions only (eslint fix)
      "formatter": {
        "code_actions": {
          "source.fixAll.eslint": true
        }
      },
    },
    "TSX": {
      "code_actions_on_format": {
        "source.fixAll.eslint": true
      }
    },
    "TypeScript": {
      "code_actions_on_format": {
        "source.fixAll.eslint": true
      }
    },
    "JavaScript": {
      "code_actions_on_format": {
        "source.fixAll.eslint": true
      }
    }
  },
  "formatter": "language_server"
}
